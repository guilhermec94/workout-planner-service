pipeline {
    agent any
    tools {
        jdk 'java-17-openjdk' // Use the JDK version compatible with your Spring Boot app
        maven 'maven' // Ensure Maven is installed on Jenkins
    }
    environment {
        // Customize as needed
        MAVEN_OPTS = '-Xmx1024m'
    }
    stages {
        stage('Clone') {
            steps {
                // Checkout the repository
                git branch: 'main', url: 'https://github.com/guilhermec94/workout-planner-service.git'
            }
        }
        stage('Build') {
            steps {
                // Compile and package the Spring Boot application
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                // Run unit tests
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                // Deployment steps, e.g., to a test environment
                echo 'Deploying...'
                // You can add scripts or additional tools as needed
            }
        }
    }
    post {
        always {
            // Archive build artifacts
            archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}